# =============================================================================
# ColdFront Containerized Deployment - Environment Variables Template
# =============================================================================
#
# This file documents all environment variables used in containerized deployments.
# Copy this file to .env and fill in the values for your environment.
#
# Variable naming conventions:
#   DJANGO__*       - Django core settings
#   HPCS__*         - HPCS-specific settings
#   COLDFRONT__*    - ColdFront-specific settings
#   DJANGO_FLAGS__* - Feature flags (django-flags)
#
# =============================================================================

# -----------------------------------------------------------------------------
# System Configuration
# -----------------------------------------------------------------------------

# Set to 'true' to enable environment-based settings loading
DJANGO__USE_ENV_SETTINGS=true

# Debug mode (NEVER set to true in production!)
DJANGO__DEBUG=false

# Django secret key (REQUIRED - keep this secret!)
# Generate with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
DJANGO__SECRET_KEY=

# Allowed hosts (comma-separated list)
DJANGO__ALLOWED_HOSTS=localhost,127.0.0.1

# SSL/HTTPS configuration
DJANGO__SESSION_COOKIE_SECURE=false

# -----------------------------------------------------------------------------
# Portal/Program Information
# -----------------------------------------------------------------------------

HPCS__PORTAL_NAME=
HPCS__PROGRAM_NAME_LONG=
HPCS__PROGRAM_NAME_SHORT=
HPCS__PRIMARY_CLUSTER_NAME=

COLDFRONT__CENTER_BASE_URL=
COLDFRONT__CENTER_USER_GUIDE=
COLDFRONT__CENTER_LOGIN_GUIDE=
COLDFRONT__CENTER_HELP_EMAIL=

# -----------------------------------------------------------------------------
# Database Configuration (PostgreSQL)
# -----------------------------------------------------------------------------

DJANGO__DATABASES_DEFAULT_NAME=coldfront
DJANGO__DATABASES_DEFAULT_USER=admin
DJANGO__DATABASES_DEFAULT_PASSWORD=
DJANGO__DATABASES_DEFAULT_HOST=host.docker.internal
DJANGO__DATABASES_DEFAULT_PORT=5432

# -----------------------------------------------------------------------------
# Cache Configuration (Redis)
# -----------------------------------------------------------------------------

HPCS__REDIS_HOST=host.docker.internal
HPCS__REDIS_PORT=6379
HPCS__REDIS_DB=0
HPCS__REDIS_PASSWORD=

# Cache timeout in seconds (default: 24 hours)
DJANGO__CACHES_DEFAULT_TIMEOUT=86400

# -----------------------------------------------------------------------------
# Email Configuration
# -----------------------------------------------------------------------------

# SMTP Settings
DJANGO__EMAIL_HOST=localhost
DJANGO__EMAIL_PORT=25
DJANGO__EMAIL_SUBJECT_PREFIX=[ColdFront]

# Email Addresses
HPCS__EMAIL_FROM=
HPCS__EMAIL_ADMIN=
COLDFRONT__EMAIL_SENDER=
COLDFRONT__EMAIL_TICKET_SYSTEM_ADDRESS=
COLDFRONT__EMAIL_DIRECTOR_EMAIL_ADDRESS=
COLDFRONT__EMAIL_PROJECT_REVIEW_CONTACT=

# Email Lists (comma-separated)
COLDFRONT__EMAIL_ADMIN_LIST=
COLDFRONT__EMAIL_DEVELOPMENT_EMAIL_LIST=

# Email Signature
COLDFRONT__EMAIL_SIGNATURE=

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------

# Log file paths (container paths)
HPCS__LOG_PATH=/var/log/coldfront/portal.log
HPCS__API_LOG_PATH=/var/log/coldfront/api.log

# Stream logs to stdout (recommended for containers)
HPCS__STREAM_LOGS_TO_STDOUT=true

# -----------------------------------------------------------------------------
# Notification Settings
# -----------------------------------------------------------------------------

# Email addresses for request approval notifications (comma-separated)
HPCS__REQUEST_APPROVAL_CC_LIST=

# Email addresses for project user removal notifications (comma-separated)
HPCS__PROJECT_USER_REMOVAL_REQUEST_PROCESSED_EMAIL_ADMIN_LIST=

# -----------------------------------------------------------------------------
# Security & Access Control
# -----------------------------------------------------------------------------

# Allow all jobs (bypass checks at submission time - DANGEROUS in production!)
HPCS__ALLOW_ALL_JOBS=false

# -----------------------------------------------------------------------------
# File Storage Configuration
# -----------------------------------------------------------------------------

# Django MEDIA_ROOT (optional)
DJANGO__MEDIA_ROOT=

# File storage backend configuration (JSON)
# Example for file_system backend:
# HPCS__FILE_STORAGE={"backend":"file_system","details":{"NEW_PROJECT_REQUEST_MOU":{"location":"/path/to/mous","filename_type":"NewProject_MOU"}}}
# Example for google_drive backend:
# HPCS__FILE_STORAGE={"backend":"google_drive","details":{...}}
HPCS__FILE_STORAGE=

# Google Drive Settings (if using google_drive backend)
DJANGO_GOOGLEDRIVE_STORAGE__GOOGLE_DRIVE_STORAGE_JSON_KEY_FILE=
DJANGO_GOOGLEDRIVE_STORAGE__GOOGLE_DRIVE_STORAGE_MEDIA_ROOT=

# -----------------------------------------------------------------------------
# BRC-Specific Settings
# -----------------------------------------------------------------------------

# Vector configuration (BRC only)
HPCS__VECTOR_PI_USERNAME=
HPCS__SAVIO_PROJECT_FOR_VECTOR_USERS=

# -----------------------------------------------------------------------------
# Billing Configuration
# -----------------------------------------------------------------------------

# Billing validator backend (optional)
# Example: coldfront.core.billing.utils.validation.backends.oracle.OracleValidatorBackend
HPCS__BILLING_VALIDATOR_BACKEND=

# Oracle billing database credentials (if using Oracle backend)
HPCS__ORACLE_BILLING_DB_DSN=
HPCS__ORACLE_BILLING_DB_USER=
HPCS__ORACLE_BILLING_DB_PASSWORD=

# -----------------------------------------------------------------------------
# Renewal Survey Configuration
# -----------------------------------------------------------------------------

# Renewal survey configuration (JSON)
# Example for Google Forms backend:
# HPCS__RENEWAL_SURVEY={"backend":"coldfront.core.project.utils_.renewal_survey.backends.google_forms.GoogleFormsRenewalSurveyBackend","details":{"credentials_file_path":"/path/to/creds.json","survey_data_file_path":"/path/to/data.json","survey_data_cache_key":"renewal_survey_data"}}
# Example for permissive backend (no survey):
# HPCS__RENEWAL_SURVEY={"backend":"coldfront.core.project.utils_.renewal_survey.backends.permissive.PermissiveRenewalSurveyBackend","details":{}}
HPCS__RENEWAL_SURVEY=

# -----------------------------------------------------------------------------
# Error Tracking (Sentry)
# -----------------------------------------------------------------------------

# Sentry DSN (optional - leave empty to disable)
HPCS__SENTRY_DSN=

# -----------------------------------------------------------------------------
# Authentication (CILogon)
# -----------------------------------------------------------------------------

HPCS__CILOGON_APP_CLIENT_ID=
HPCS__CILOGON_APP_SECRET=

# -----------------------------------------------------------------------------
# Feature Flags (django-flags)
# -----------------------------------------------------------------------------

# Allocation renewal period (month number, e.g., "11" for November)
DJANGO_FLAGS__ALLOCATION_RENEWAL_FOR_NEXT_PERIOD_REQUESTABLE_VALUE=

# Authentication method (exactly one must be true)
DJANGO_FLAGS__BASIC_AUTH_ENABLED_VALUE=false
DJANGO_FLAGS__SSO_ENABLED_VALUE=true

# Link login (only if SSO is enabled)
DJANGO_FLAGS__LINK_LOGIN_ENABLED_VALUE=false

# Deployment type (exactly one must be true)
DJANGO_FLAGS__BRC_ONLY_VALUE=false
DJANGO_FLAGS__LRC_ONLY_VALUE=true

# Feature toggles
DJANGO_FLAGS__MOU_GENERATION_ENABLED_VALUE=false
DJANGO_FLAGS__MULTIPLE_EMAIL_ADDRESSES_ALLOWED_VALUE=false
DJANGO_FLAGS__RENEWAL_SURVEY_ENABLED_VALUE=false
DJANGO_FLAGS__SECURE_DIRS_REQUESTABLE_VALUE=false
DJANGO_FLAGS__SERVICE_UNITS_PURCHASABLE_VALUE=false

# -----------------------------------------------------------------------------
# Plugins
# -----------------------------------------------------------------------------

# Plugin: departments
HPCS__PLUGIN_DEPARTMENTS_ENABLED=false
HPCS__PLUGIN_DEPARTMENTS_DEPARTMENT_DISPLAY_NAME=
# Data source short name: "calnet_ldap" or "dummy"
HPCS__PLUGIN_DEPARTMENTS_DEPARTMENT_DATA_SOURCE=

